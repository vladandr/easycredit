@using EasyCredit.Models;
@model IEnumerable<CreditPlan>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>EasyCredit</h1>
    <p class="lead">EasyCredit system will provide you all necessary information about credits and their conditions</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
<div class="col-md-6">
<h2>Active Credit Plans</h2>
 <hr />

@{ foreach (CreditPlan plan in @Model)    {
        if (@plan.Status != EasyCredit.Constants.CreditPlanStatusDictionary.InHistory)
        {
        <div class="row">
            <div class="col-md-4">
                <h2>@plan.NameOfPlan</h2>
                <p>@plan.Description</p>
                <p>@Html.ActionLink("View more >>", "ShowPlan", "CreditPlan", new { id = plan.Id }, htmlAttributes: new { @class = "btn btn-default" })</p>
            </div>
        </div>
            }
        }
}
    </div>
<div class="col-md-6">
    <h2>Credit Plans in History</h2>
    <hr/>
    @{ foreach (CreditPlan plan in @Model)
        {
            if (@plan.Status != EasyCredit.Constants.CreditPlanStatusDictionary.ActivePlan)
            {
                <div class="row">
                    <div class="col-md-4">
                        <h2>@plan.NameOfPlan</h2>
                        <p>@plan.Description</p>
                        <p>@Html.ActionLink("View more >>", "ShowPlan", "CreditPlan", new { id = plan.Id }, htmlAttributes: new { @class = "btn btn-default" })</p>
                    </div>
                </div>
            }
        }
    }
    </div>
<hr />

